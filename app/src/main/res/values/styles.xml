<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">@dimen/activity_textview_padding</item>
        <item name="android:layout_marginBottom">@dimen/activity_textview_padding</item>
    </style>

    <style name="contact_page__medium_style">
        <item name="android:paddingTop">@dimen/activity_textview_padding</item>
        <item name="android:paddingBottom">@dimen/activity_textview_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">Medium Text</item>
    </style>

    <style name="contact_page__small_style">
        <item name="android:paddingBottom">@dimen/activity_textview_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:text">Small Text</item>
        <item name="android:textColor">#939393</item>
    </style>
</resources>
